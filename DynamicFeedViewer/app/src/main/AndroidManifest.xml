<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.rss.feed.reader.activities" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/galaxy"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".EntryRssListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RssContentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".RssContentListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".AddRssActivity"
            android:label="@string/title_activity_add_rss">
        </activity>
        <activity
            android:name=".DisPlayWebPageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
    </application>

</manifest>
